<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

    <title>DreamCatcher | The Online Dream Journal</title>
  </head>
  <body>

      <% if logged_in? %>
      <nav class="navbar navbar-expand-sm navbar-dark bg-nav sticky-top">



        <a href="/" class="navbar-brand"><img src="/images/dreamcatcher-tiny3.png">
        <span class="white-text">DreamCatcher</span></a>

        <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-links">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="nav-links">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/dreams" class="nav-link">Dreams</a>
            </li>
            <li class="nav-item">
              <a href="/categories" class="nav-link">Categories</a>
            </li>

            <li class="nav-item dropdown">
              <a href="#" data-toggle="dropdown" data-target="dropdown-personal" class="nav-link dropdown-toggle">
                <%= current_user.username %>
                <span class="caret"></span>
              </a>

              <div class="dropdown-menu dropdown-menu-right bg-nav" aria-labelledby="dropdown-personal">
                <a href="/dreams/new" class="dropdown-item">New Dream</a>
                <div class="dropdown-divider"></div>
                <a href="/users/<%= current_user.id %>" class="dropdown-item">My Dreams</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>
      <% end %>

    <div class="container main-area">

      <% if flash.has?(:error) %>
        <div class="row">
          <div class="col-sm-12 error">
            <div class="error">
              <%= flash[:error] %>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash.has?(:success) %>
        <div class="row">
          <div class="col-sm-12 success">
            <div class="success">
              <%= flash[:success] %>
            </div>
          </div>
        </div>
      <% end %>



      <%= yield %>



  	</div> <!-- Container -->

    <footer class="footer">
      <div class="container">
        <div class="row center-block">Icons made by <a href="https://www.flaticon.com/authors/smashicons" title="Smashicons">Smashicons</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>
      </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
